{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ES2021"],
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "types": ["node", "monaco-editor"],
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "vite.config.ts"]
}
