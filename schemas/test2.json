{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Event",
	"type": "object",
	"properties": {
		"event": {
			"oneOf": [
				{
					"type": "object",
					"required": [
						"type",
						"message"
					],
					"properties": {
						"type": {
							"const": "text"
						},
						"message": {
							"type": "string"
						}
					}
				},
				{
					"type": "object",
					"required": [
						"type",
						"code"
					],
					"properties": {
						"type": {
							"const": "error"
						},
						"code": {
							"type": "number"
						}
					}
				}
			]
		}
	},
	"required": [
		"event"
	]
}
