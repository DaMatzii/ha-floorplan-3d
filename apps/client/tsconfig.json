{
	"compilerOptions": {
		"composite": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"module": "esnext",
		"target": "esnext",
		"lib": [
			"DOM",
			"ES2021"
		],
		"outDir": "./dist",
		"rootDir": "src",
		"baseUrl": "./src",
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"src"
	]
}
